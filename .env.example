# Application Settings
APP_NAME="FastAPI MongoDB Template"
APP_VERSION="1.0.0"
APP_DESCRIPTION="A production-ready FastAPI + MongoDB template"
ENVIRONMENT="development"  # development, staging, production
DEBUG=true

# Server Configuration
HOST="0.0.0.0"
PORT=3003

# Database Configuration
MONGODB_URL="mongodb://localhost:27017"
MONGODB_DB_NAME="analytics_db"
MONGODB_MAX_CONNECTIONS=10
MONGODB_MIN_CONNECTIONS=1

# CORS Configuration
CORS_ORIGINS="http://localhost:3000,http://localhost:3003"
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS="*"
CORS_ALLOW_HEADERS="*"
  
# Logging Configuration
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT="json"  # json or text

# Security & JWT Authentication (DEPRECATED)
# JWT_SECRET: Ya NO se requiere en este microservicio.
#             La autenticación se realiza en el API Gateway, que añade headers
#             con la información del usuario (x-user-id, x-gateway-authenticated).
#             Este microservicio confía en esos headers.
#             Puedes eliminar esta variable de forma segura.
# JWT_SECRET=""

# Rate Limiting
# REDIS_URL: URL de conexión a Redis para rate limiting distribuido
#            Si no está disponible, se usará rate limiting en memoria
REDIS_URL="redis://localhost:6379"

# Microservices Configuration
# BEATS_SERVICE_URL: URL del microservicio de beats para verificar ownership de beats
#                    Se usa en BeatMetrics para validar que el usuario tiene acceso al beat
BEATS_SERVICE_URL="http://localhost:3002"
