# Application Settings
APP_NAME="FastAPI MongoDB Template"
APP_VERSION="1.0.0"
APP_DESCRIPTION="A production-ready FastAPI + MongoDB template"
ENVIRONMENT="development"  # development, staging, production
DEBUG=true

# Server Configuration
HOST="0.0.0.0"
PORT=8000

# Database Configuration
MONGODB_URL="mongodb://localhost:27017"
MONGODB_DB_NAME="fastapi_template"
MONGODB_MAX_CONNECTIONS=10
MONGODB_MIN_CONNECTIONS=1

# CORS Configuration
CORS_ORIGINS="http://localhost:3000,http://localhost:8000"
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS="*"
CORS_ALLOW_HEADERS="*"

# Logging Configuration
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT="json"  # json or text

# Security (if needed in future)
SECRET_KEY="your-secret-key-here-change-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
