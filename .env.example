# Application Settings
APP_NAME="FastAPI MongoDB Template"
APP_VERSION="1.0.0"
APP_DESCRIPTION="A production-ready FastAPI + MongoDB template"
ENVIRONMENT="development"  # development, staging, production
DEBUG=true

# Server Configuration
HOST="0.0.0.0"
PORT=3003

# Database Configuration
MONGODB_URL="mongodb://localhost:27017"
MONGODB_DB_NAME="analytics_db"
MONGODB_MAX_CONNECTIONS=10
MONGODB_MIN_CONNECTIONS=1

# CORS Configuration
CORS_ORIGINS="http://localhost:3000,http://localhost:3003"
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS="*"
CORS_ALLOW_HEADERS="*"
  
# Logging Configuration
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT="json"  # json or text

# Security & JWT Authentication (DEPRECATED)

# JWT_SECRET=""

# Rate Limiting
# REDIS_URL: URL de conexión a Redis para rate limiting distribuido
#            Si no está disponible, se usará rate limiting en memoria
REDIS_URL="redis://localhost:6379"

# Microservices Configuration
# BEATS_SERVICE_URL: URL del microservicio de beats para verificar ownership de beats
#                    Se usa en BeatMetrics para validar que el usuario tiene acceso al beat
BEATS_SERVICE_URL="http://localhost:3005"

# Kafka Configuration
# KAFKA_BROKER: URL del broker de Kafka
# ENABLE_KAFKA: Activar o desactivar la conexión a Kafka
# KAFKA_CONNECTION_MAX_RETRIES: Número máximo de reintentos antes de entrar en cooldown
# KAFKA_CONNECTION_RETRY_DELAY: Tiempo de espera entre reintentos (ms)
# KAFKA_COOLDOWN: Tiempo de cooldown después de agotar los reintentos (ms)
KAFKA_BROKER="kafka:9092"
ENABLE_KAFKA=true
KAFKA_CONNECTION_MAX_RETRIES=10
KAFKA_CONNECTION_RETRY_DELAY=3000
KAFKA_COOLDOWN=30000
